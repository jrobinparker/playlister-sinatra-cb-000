<h1>Create a new artist</h1>

<form action="/artists" method="POST">
  <label>Name:</label>

  <br/>

  <input type="text" name="artist[name]">

  <br/>

  <label>Choose a genre:</label>

  <br/>

  <% @genres.each do |genre| %>
    <input type="checkbox" name="artist[genre_ids][]"  value="<%= genre.id %>" id="<%= genre.id %>"><%= genre.name %></input>
  <% end %>
  <br/>

  <label>and/or, create a new genre:</label>

  <br/>

  <label>Name:</label>

  <input type="text" name="genre[name]">

  <br/>

  <input type="submit" value="Create Artist">
</form>
