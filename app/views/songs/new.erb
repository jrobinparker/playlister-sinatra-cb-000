<h1>Create a new song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br/>

  <input type="text" name="song[name]" id="Name">

  <br/>

  <label>Artist Name:</label>

  <br/>

  <input type="text" name="artist[name]" id="artist_name">

  <br/>

  <label>Choose a genre:</label>

  <br/>

  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]"  value="<%= genre.id %>" id="<%= genre.id %>"><%= genre.name %></input>
  <% end %>
  <br/>

  <label>and/or, create a new genre:</label>

  <br/>

  <label>Name:</label>

  <input type="text" name="genre[name]">

  <br/>

  <input type="submit" value="Create">
</form>
